<div class="container mt-5">
  <div class="row justify-content-center align-items-center">
    <div class="card" style="width:50%;">
      
      <div class="card-header text-center">
        <h1>Account Login <i class="fas fa-key small"></i></h1>
      </div>
      
      <div class="card-body">
        <form action="/" method="POST">
          <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Email" name="email" value={{email}}>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Password"  name="password">
          </div>
          <div>
            <input type="checkbox" name="storeEmail" {{#if storeEmail}} checked {{/if}}>
            <label for="storeEmail">Remember me</label>
          </div>
          {{#if errorMessage}}
            <div class="alert alert-danger text-center" role="alert">
            {{errorMessage}}
          </div>
          {{/if}}
          <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
      </div>

    </div> 
  </div>
</div>
